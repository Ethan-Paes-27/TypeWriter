import java.io.File;
import java.io.PrintWriter;
import java.util.Scanner;

public class RandomTextGenerator {

    public static void generateText(int k, int length, String sourceName, String outputName) throws Exception {
        String source = "";
        PrintWriter output;

        try {
            source = new Scanner(new File(sourceName)).useDelimiter("\\Z").next();
        }
        catch (Exception e) {
            System.err.println("Source passed does not exist or is not available!");
            return;
        }
        try {
            output = new PrintWriter(new File(outputName));
        }
        catch (Exception e) {
            System.err.println("Output passed does not exist or is not available!");
            return;
        }
        if (k < 0) {
            System.err.println("K is negative!");
            return;
        }
        if (length < source.length()) {
            System.err.println("Length is less than the source file length!");
            return;
        }

        
    }


    public static void main(String[] args) {

    }
}
